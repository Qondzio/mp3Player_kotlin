<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#838080"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/wrapper_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:contentDescription="TODO"
            android:src="@drawable/mp3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:freezesText="false"
            android:gravity="center"
            android:text="MP3_PLAYER"
            android:textAlignment="center"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekbar"
            style="@android:style/Widget.Material.SeekBar"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#28FBF6F6"
            android:foregroundTint="#F10606"
            android:indeterminateTint="#0C0404"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="#F6F2F2"
            android:progressTint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="106dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foregroundTint="#FBF9F9"
            android:tint="#FDFCFC"
            app:backgroundTint="@color/orange"
            app:rippleColor="#FFFFFF"
            app:srcCompat="@drawable/baseline_skip_previous_24"
            tools:ignore="SpeakableTextPresentCheck" />

         <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/orange"
            app:srcCompat="@drawable/baseline_play_arrow_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/orange"
            app:srcCompat="@drawable/baseline_pause_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            app:backgroundTint="@color/orange"
            app:srcCompat="@drawable/baseline_skip_next_24"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</RelativeLayout>